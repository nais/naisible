{% set ip_etcd = [] -%}
{% for host in groups['etcd'] | intersect(groups['etcd_coreos']) -%}
  {% set _ = ip_etcd.append("\"%s\"" % (hostvars[host]['ansible_default_ipv4']['address'])) -%}
{% endfor -%}
{% set hostname_etcd = [] -%}
{% for host in groups['etcd'] | intersect(groups['etcd_coreos']) -%}
  {% set _ = hostname_etcd.append(host) -%}
{% endfor -%}
{
  "CN": "etcd",
  "hosts": [
    "127.0.0.1",
    {{ ip_etcd|join(',\n')|indent }},
    {{ hostname_etcd|join(',\n')|indent }}
  ],
  "key": {
    "algo": "ecdsa",
    "size": 384
  }
}
