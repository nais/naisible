[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

[Service]
ExecStart=/usr/bin/kubelet --cluster-dns={{ cluster_dns_ip }} --cluster-domain={{ cluster_domain }} --anonymous-auth=false --client-ca-file=/etc/kubernetes/pki/ca.pem --require-kubeconfig --kubeconfig=/etc/kubernetes/kubeconfigs/kubelet.conf

Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target
